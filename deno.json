{
  "tasks": {
    "dev": "deno run --watch src/entidad.ts",
    "check": "deno check .",
    "test": "deno test --allow-read"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "testing/bdd": "https://deno.land/std@0.224.0/testing/bdd.ts",
    "testing/expect": "https://deno.land/std@0.224.0/expect/mod.ts"
  }
}
