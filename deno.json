{
  "tasks": {
    "dev": "deno run --watch src/entidad.ts",
    "check": "deno check src/entidad.ts",
    "lint": "deno lint",
    "test": "deno test"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1" 
  }
}
